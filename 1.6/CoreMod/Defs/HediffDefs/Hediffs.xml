<ThingDef ParentName="VoidFieldBaseSTNL">
	<defName>VPE_VoidFieldSTNL</defName>
	<label>Void Field</label>
	<description>A phenomenon that prevents anyone nearby to use psycasts.</description>
	<useHitPoints>false</useHitPoints>
	<tickerType>Normal</tickerType>
	<drawerType>RealtimeOnly</drawerType>
	<selectable>False</selectable>
	<fillPercent>0</fillPercent>
	<graphicData>
		<texPath>UI_BladerSTNL/None</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<drawSize>(1,1)</drawSize>
		<shadowData>
			<volume>(0, 0, 0)</volume>
			<offset>(0, 0, -0.2)</offset>
		</shadowData>
	</graphicData>
	<altitudeLayer>Building</altitudeLayer>
	<building>
		<ai_chillDestination>false</ai_chillDestination>
	</building>
	<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	<uiOrder>2420</uiOrder>
	<rotatable>false</rotatable>
	<statBases>
		<WorkToBuild>8000</WorkToBuild>
		<Mass>0.01</Mass>
		<Flammability>0</Flammability>
	</statBases>
	<size>(1,1)</size>
	<comps>
		<li Class="CompProperties_DestroyAfterDelay">
			<delayTicks>10000</delayTicks>
		</li>
		<li Class="CompProperties_CauseHediff_AoE">
			<range>6.9</range>
			<onlyTargetMechs>False</onlyTargetMechs>
			<hediff>VPE_VoidFieldSTNL</hediff>
		</li>
		<li Class="VPE_Blader.CompProperties_RemoveHediffs">
			<hediffDefs>
				<li MayRequire="Ludeon.Rimworld.Anomaly">HoraxianInvisibility</li>
				<li>PsychicInvisibility</li>
			</hediffDefs>
			<tickInterval>60</tickInterval>
			<radius>6.9</radius>
		</li>
		<li MayRequire="Ludeon.Rimworld.Anomaly" Class="VPE_Blader.CompProperties_EffecterBase">
			<effecterDef>VoidNodeAttached</effecterDef>
			<scale>2</scale>
		</li>
	</comps>
	<placeWorkers>
		<li>PlaceWorker_ShowCauseHediffAoE</li>
	</placeWorkers>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
</ThingDef>

